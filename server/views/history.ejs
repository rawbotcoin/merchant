<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel='stylesheet' href='../../../../stylesheets/style.css'/>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="../../../../bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">    <link rel="shortcut icon" type="image/x-icon" href="../../../../images/favicon.ico"/>
    <title>Rawbot</title>
</head>

<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#" id="rawbot_device_title">RAWBOT</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="../../../../">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="../../../../ipfs">IPFS</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="../../../../devices">My devices</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="../../../../p2d">Pay to devices</a>
            </li>
        </ul>

        <ul class="navbar-nav my-2 my-lg-0">
            <li class="nav-item">
                <a class="nav-link" href="#" id="balance_eth"></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" id="balance_rawbot"></a>
            </li>

            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                   aria-haspopup="true" aria-expanded="false">
                    <span id="user_address"></span>
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <% if (!user) { %>
                    <a class="nav-link" href="#" onclick="App.signIn()">Authenticate</a>
                    <div class="dropdown-divider"></div>
                    <% } %>
                    <a class="nav-link" href="#" onclick="App.logout()">My Transactions</a>
                    <% if (user) { %>
                    <div class="dropdown-divider"></div>
                    <a class="nav-link" href="#" onclick="App.logout()">Logout</a>
                    <% } %>
                </div>
            </li>
        </ul>
    </div>
</nav>
<div class="container">
    <table class="table table-bordered table-hover table-stats custom_background lower">
        <thead>
        <tr>
            <th scope="col">User</th>
            <th scope="col">Time activated</th>
            <th scope="col">Recurring</th>
            <th scope="col">Enable</th>
        </tr>
        </thead>
        <tbody id="device_action_history">
        </tbody>
    </table>
</div>
<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="../../../../js/utils/jquery-3.3.1.min.js"></script>
<script src="../../../../js/utils/popper.min.js"></script>
<script src="../../../../bootstrap/js/bootstrap.min.js"></script>
<script src="../../../../js/utils/web3.min.js"></script>
<script src="../../../../js/app.js"></script>
</body>

</html>